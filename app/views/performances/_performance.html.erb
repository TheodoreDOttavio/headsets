<div class="row">
<div class="col-sm-3 editbold lt"><%= link_to performance.name, performance %></div>
  <% if params[:current] != "1" then %>
  <div class="col-sm-2 editlight lt"><%= performance.theater_name %></div>
  <div class="col-sm-4 editbold ct">
    <%= if performance.closeing.strftime('%Y-%m-%d') == "3000-01-01" then
          "Opened " + performance.opening.strftime('%b %d, %Y')
        else
          performance.opening.strftime('%b %d, %Y') + " to " + performance.closeing.strftime('%b %d, %Y')
        end %>
  </div>
  <% else %>
  <div class="col-sm-3 editbold lt"><%= performance.theater_name %></div>
  <div class="col-sm-3 editlight lt"><%= performance.theater_company %></div>
  <% end %>
<div class="col-sm-2 editbold lt"><%= link_to "Edit " + performance.name[0..15], edit_performance_path(performance), class: "btn btn-sm btn-warning" %></div>
</div>
